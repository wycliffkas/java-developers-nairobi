<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/users_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_developers_card_margin"
    android:layout_marginStart="@dimen/list_developers_card_margin"
    android:layout_marginEnd="@dimen/list_developers_card_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/list_developers_image_width"
            android:layout_height="@dimen/list_developers_image_height"
            android:layout_marginStart="@dimen/list_developers_image_margin_start_left"
            android:layout_marginLeft="@dimen/list_developers_image_margin_start_left"
            android:layout_marginEnd="@dimen/list_developers_image_margin_end_right"
            android:layout_marginRight="@dimen/list_developers_image_margin_end_right"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/imageDescription" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_developers_text_margin_start_left"
            android:layout_marginLeft="@dimen/list_developers_text_margin_start_left"
            android:layout_marginTop="@dimen/list_developers_text_margin_top_bottom"
            android:layout_marginEnd="@dimen/list_developers_text_margin_end_right"
            android:layout_marginRight="@dimen/list_developers_text_margin_end_right"
            android:layout_marginBottom="@dimen/list_developers_text_margin_top_bottom"
            android:text="@string/name"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>


